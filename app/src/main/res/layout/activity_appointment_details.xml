<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.AppointmentDetailsActivity">

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment Date:"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_appointmentDetails_appointment_date"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:hint="editText date"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toRightOf="@+id/textView_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_time"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:text="Appointment Time:"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@id/textView_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_appointmentDetails_appointment_time"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:hint="editText time"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toRightOf="@+id/textView_time"
        app:layout_constraintTop_toBottomOf="@+id/textView_appointmentDetails_appointment_date" />

    <TextView
        android:id="@+id/textView_appointmentDetails_customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="Customer and Pet information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_time" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_customerList"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/textView_appointmentDetails_customerName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_petList"
        android:layout_height="70dp"
        android:layout_width="match_parent"

        app:layout_constraintTop_toBottomOf="@id/recyclerView_customerList" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_appointment_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>